{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/${config:env.project}/Tasks",
                "--framework",
                "${config:env.framework}",
                "/property:StartupObject=Tasks.${config:env.task}"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
        },
        {
            "label": "run",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/${config:env.project}/Tasks",
                "--framework",
                "${config:env.framework}",
                "--property:StartupObject=Tasks.${config:env.task}",
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
                "${workspaceFolder}/${config:env.project}",
                "--framework",
                "${config:env.framework}",
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "dependsOn": [
                "build"
            ]
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "clean",
                "${workspaceFolder}/${config:env.project}"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}