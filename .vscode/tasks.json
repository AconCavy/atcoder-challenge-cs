{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/${config:env.project}/Tasks",
                "--framework",
                "${config:env.framework}"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/${config:env.project}/Tasks",
                "--framework",
                "${config:env.framework}",
                // "--property:StartupObject=Tasks.${config:env.task}"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
                "${workspaceFolder}/${config:env.project}",
                "--framework",
                "${config:env.framework}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "clean",
                "${workspaceFolder}/${config:env.project}"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}